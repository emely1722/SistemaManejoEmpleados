@model EmpleadoViewModel

@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Editar Información del Empleado</h4>
        </div>
        <div class="card-body">
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success">@TempData["Mensaje"]</div>
            }

            <form asp-action="Editar" method="post">
                <input type="hidden" asp-for="ID_EMPLEADO" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="NOMBRE_EMPLEADO" class="form-label"></label>
                        <input asp-for="NOMBRE_EMPLEADO" class="form-control" />
                        <span asp-validation-for="NOMBRE_EMPLEADO" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CEDULA_EMPLEADO" class="form-label"></label>
                        <input asp-for="CEDULA_EMPLEADO" class="form-control" />
                        <span asp-validation-for="CEDULA_EMPLEADO" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="GENERO" class="form-label"></label>
                        <select asp-for="GENERO" class="form-select">
                            <option value="">Seleccione</option>
                            <option value="Femenino">Femenino</option>
                            <option value="Masculino">Masculino</option>
                        </select>
                        <span asp-validation-for="GENERO" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TELEFONO_EMPLEADO" class="form-label"></label>
                        <input asp-for="TELEFONO_EMPLEADO" class="form-control" />
                        <span asp-validation-for="TELEFONO_EMPLEADO" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="FECHA_INICIO" class="form-label"></label>
                        <input asp-for="FECHA_INICIO" type="date" class="form-control" />
                        <span asp-validation-for="FECHA_INICIO" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="SALARIO_EMPLEADO" class="form-label"></label>
                        <input asp-for="SALARIO_EMPLEADO" class="form-control" />
                        <span asp-validation-for="SALARIO_EMPLEADO" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="ESTADO" type="checkbox" class="form-check-input" />
                        <label asp-for="ESTADO" class="form-check-label">Activo</label>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ID_DEPARTAMENTO" class="form-label"></label>
                        <select asp-for="ID_DEPARTAMENTO" class="form-select"
                                asp-items="@(new SelectList(ViewBag.Departamentos, "IdDepartamento", "NombreDepartamento"))">
                            <option value="">Seleccione Departamento</option>
                        </select>
                        <span asp-validation-for="ID_DEPARTAMENTO" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ID_CARGO" class="form-label"></label>
                        <select asp-for="ID_CARGO" class="form-select"
                                asp-items="@(new SelectList(ViewBag.Cargos, "IdCargo", "NombreCargo"))">
                            <option value="">Seleccione Cargo</option>
                        </select>
                        <span asp-validation-for="ID_CARGO" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Guardar Cambios</button>
                    <a asp-action="Lista" class="btn btn-outline-secondary">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
