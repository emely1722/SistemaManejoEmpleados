@{
}

@model CargoViewModel

@{
    ViewData["Title"] = "Editar Departamento";
}

<h2>
    Editar Cargo
</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info">@TempData["Mensaje"]</div>
}

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="ID_CARGO" />
    <div>
        <label asp-for="NOMBRE_CARGO"></label>
        <input asp-action="NOMBRE_CARGO" class="form-control" />
        <span asp-validation-for="NOMBRE_CARGO" class="text-danger"></span>
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a href="/Cargo/Lista" class="btn btn-secondary">Volver a la Lista</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}