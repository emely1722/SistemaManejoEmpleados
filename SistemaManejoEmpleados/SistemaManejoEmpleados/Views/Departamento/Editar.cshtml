@{
}

@model DepartamentoViewModel

@{
    ViewData["Title"] = "Editar Departamento";
}

<h2>
    Editar Departamento
</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info">@TempData["Mensaje"]</div>
}

<form asp-action="Editar" method="post">
    <div>
        <label asp-for="NOMBRE_DEPARTAMENTO"></label>
        <input asp-action="NOMBRE_DEPARTAMENTO" class="form-control" />
        <span asp-validation-for="NOMBRE_DEPARTAMENTO" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="/Views/Departamento/Lista" class="btn btn-secondary">Volver a la Lista</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
