@model DepartamentoViewModel
@{
    ViewData["Title"] = "Registrar Departamento";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Registro de Departamentos</h4>
        </div>
        <div class="card-body">
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success">@TempData["Mensaje"]</div>
            }

            <form asp-action="Registrar" asp-controller="Departamento" method="post">
                <div class="mb-3">
                    <label asp-for="NOMBRE_DEPARTAMENTO" class="form-label"></label>
                    <input asp-for="NOMBRE_DEPARTAMENTO" class="form-control" />
                    <span asp-validation-for="NOMBRE_DEPARTAMENTO" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-save"></i> Guardar
                    </button>
                    <a href="@Url.Action("Lista", "Departamento")" class="btn btn-outline-secondary">
                        <i class="fa fa-list"></i> Ver Lista de Departamentos
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
